{
  "plugins": ["stylelint-order"],
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "font-family-name-quotes": "always-where-required",
    "string-quotes": "single",
    "order/properties-alphabetical-order": true
  },
  "ignoreFiles": ["**/node_modules/**", "/out/**"]
}
